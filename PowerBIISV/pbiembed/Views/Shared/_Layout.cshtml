<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Power BI Embedded Sample</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--link href="~/Content/powerbi.css" rel="stylesheet" /-->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PBI Embedded", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--li>@Html.ActionLink("Products", "Index", "Products")</-->
                    <li>@Html.ActionLink("Reports", "Reports", "Dashboard")</li>
                    <li>@Html.ActionLink("Public", "PublicReport", "Dashboard")</li>
                    <li>@Html.ActionLink("Sign Up", "SignUp", "Onboarding")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/powerbi.js"></script>
    <script>
        window.addEventListener('DOMContentLoaded', function () {
            powerbi.init();
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
